import java.util.Scanner;
public class TersUcgen {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.print("Bir sayi giriniz: ");
        int sayi = scan.nextInt();
        for(int i = sayi; i>=1; i--){
            for(int j = 1; j<= i; j++){
                System.out.print("*");
            }
             System.out.println();
        }
    }    
}
